{
  "name": "oba-live-tool",
  "type": "module",
  "version": "1.4.5-beta.1",
  "private": true,
  "description": "抖音直播工具，用于直播带货，能自动弹窗，自动发言",
  "author": "OBA Douyin Live Streaming Department",
  "license": "MIT",
  "main": "dist-electron/main/index.js",
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --publish never",
    "preview": "vite preview",
    "pretest": "vite build --mode=test",
    "test": "vitest run",
    "prepare": "husky",
    "release": "pnpm build && bumpp && git push --follow-tags"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dialog": "^1.1.5",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.1.7",
    "ahooks": "^3.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-updater": "6.4.1",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.474.0",
    "openai": "^4.82.0",
    "playwright": "^1.50.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react-router": "^7.1.3",
    "vaul": "^1.1.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint-react/eslint-plugin": "^1.24.1",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@types/signale": "^1.4.7",
    "@vitejs/plugin-react": "^4.3.4",
    "@welldone-software/why-did-you-render": "^8",
    "autoprefixer": "^10.4.20",
    "biome": "^0.3.3",
    "builder-util-runtime": "^9.2.10",
    "bumpp": "^10.0.1",
    "electron": "^34.0.2",
    "electron-builder": "^24.13.3",
    "electron-log": "^5.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "postcss-import": "^16.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^3.0.4"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
